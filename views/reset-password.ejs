<%- include('partials/header') %>
<div class="row mt-5">
   <div class="col-lg-5 mx-auto">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="fw-bold text-secondary">Reset password</h2>
        </div>
        <div class="card-body p-5">
            <% if (message.success){ %>
                <div class="alert alert-success" role="alert">
                    <strong><%= message.success %></strong>
                </div>
                <% } %>
            <% if (message.error){ %>
                <div class="alert alert-danger" role="alert">
                    <strong><%= message.error %></strong>
                </div>
                <% } %>
            <form action="/reset-password" method="post">
                <input type="hidden" name="token" value="<%= token %>">

                <div class="mb-3">
                    <label for="new_password">Enter New password</label>
                    <input type="password" name="new_password" id="new_password" 
                    class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="new1_password">Confirm New password</label>
                    <input type="password" name="new1_password" id="new1_password" 
                    class="form-control" required>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Update Password</button>
                </div>
                </form>
        </div>
    </div>
   </div> 
</div>
<%- include('partials/footer') %>